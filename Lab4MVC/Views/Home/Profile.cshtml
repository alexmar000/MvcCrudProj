@model CustomerBooksViewModel

@{
    ViewData["Title"] = "Customer Profile";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.PhoneNumber)
            </th>
            <th>
                <a asp-action="AddOrEdit" asp-route-id=@Model.Customer.Id class="btn btn-outline-success">Edit</a>
                <a asp-action="DeletedCustomer" asp-route-id=@Model.Customer.Id class="btn btn-outline-success">Remove</a>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Customer.FullName
            </td>
            <td>
                @Model.Customer.Address
            </td>
            <td>
                @Model.Customer.PhoneNumber
            </td>
            <td>
            </td>
        </tr>
    </tbody>
</table>

<h1>Borrowings</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Isbn
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model.Books)
        {
         <tr>
            <td>
                @book.Title
            </td>
            <td>
                @book.Author
            </td>
            <td>
                @book.ISBNNumber
            </td>
            <td>
            </td>
        </tr>
        }
    </tbody>
</table>